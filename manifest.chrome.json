{
    "name": "Friction",
    "version": "0.3",
    "manifest_version": 2,
    "description": "Introduce friction to those sites you use habitually but want to use less.",
    "background": {
        "persistent": false,
        "scripts": [
            "background.js",
            "options.js"
        ]
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "incognito": "split"
}
